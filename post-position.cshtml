<!doctype html>
<html class="no-js" lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>UpDock | Post Job Position</title>
		<link rel="stylesheet" href="css/laurenz.css" />
		<link rel="stylesheet" href="css/foundation.css" />
		<link href='http://fonts.googleapis.com/css?family=Arbutus+Slab' rel='stylesheet' type='text/css'>
		<script src="js/vendor/modernizr.js"></script>
	</head>

	<body class="body">				
		<br>
		<div class="row">
			<ul class="left">
				<li><img src="assets/logo_small1.png"></li>				
			</ul>
			<!--
			<ul class="right">
				<a class="button radius" href="#">Log In</a>
			</ul>
			-->
		</div>


		<br>
		<div id="bottom-topbar">
            @{
            if (IsPost) {
            string title = Request["title"];
            string field = Request["fieldofwork"]; 
            string salary = Request["salary"]; 
            string skills = Request["skills"];
            string description = Request["description"];
            var db = Database.Open("UpDockConnectionString");
            var queryString = "INSERT INTO Position ( title , min_salary, startup_id, skills_needed, description ) VALUES ('" + title + "', " + salary + ", 0, '" + skills + "', '" + description + "')";  //later, will choose which startup id based on who's logged in
            var query = db.Execute(queryString);
            db.Close();
                
                
            <!----p>
                You entered: <br />
                Job Title: @title <br />
                Field of Work: @field <br />
                Salary: @salary <br />
                Skills Required: @skills <br />
                Job Description: @description
            </!--p-->
            }
            else{
			<form method="post">		
				<div class="row">
						<div class="large-6 columns">
								<label  id="login-signup">	Post New Job Position</label>	
						</div>
                </div>
                <br />
                <div class="row">
                    <div class="large-4 columns">
                        <input type="text" name="title" placeholder="Job Title" id="rounded-input-darkteal">
                    </div>

                    <div class="large-4 columns">
       
                            <input type="text" name="fieldofwork" placeholder="Field of Work" id="rounded-input-darkteal">
                            <!----select>
                                
                                <option value="placeholder">Field of Work</option>
                                <optgroup>
                                    <option value="husker">Husker</option>
                                    <option value="starbuck">Starbuck</option>
                                    <option value="hotdog">Hot Dog</option>
                                    <option value="apollo">Apollo</option>
                                </optgroup>
                            </select-->
                    </div>
                    <div class="large-4 columns">
                        <input type="text" name="salary" placeholder="Salary" id="rounded-input-darkteal">
                    </div>
                 
                    
                </div>

                   

                <div class="row">
                    <div class="large-12 columns">
                        <textarea name="skills" placeholder="Required Skills" id="rounded-input-darkteal"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="large-12 columns">
                        <textarea name = "description" placeholder="Job Description" id="rounded-input-darkteal"></textarea>
                    </div>
                </div>
                <div class="row">
						<div>
							<input type="submit" value="Post" id="rounded-button-register">
						</div>
				</div>
			</form>
            }
            }
		</div>
		<div class="bottom-lowbar">
				UpDock © 2014 by Tatsulok.<br>
				De La Salle University, 2401 Taft Avenue, Malate, Manila, Philippines	
		</div>

		<div class="bottom-members">		
		<br>
			<div class="row">
				<h1 id="tatsulok"> Team Tatsulok </h1>

				<div class="large-3 columns">
					<img src="assets/scarlett1.png">
					<br>
					<h1 id="names"> Laurenz Tolentino </h1>
				</div>

				<div class="large-3 columns">
					<img src="assets/scarlett1.png">
					<br>
					<h1 id="names"> Scarlett Johansson </h1>
				</div>

				<div class="large-3 columns">
					<img src="assets/messi1.png">
					<br>
					<h1 id="names"> Lionel Messi </h1>
				</div>

				<div class="large-3 columns">
					<img src="assets/messi1.png">
					<br>
					<h1 id="names"> Groupmate </h1>
				</div>
			</div>
		</div>

		<!-- Script Part, keep in bottom-->
		<script src="js/vendor/jquery.js"></script>
		<script src="js/foundation.min.js"></script>
		<script>
			$(document).foundation();
		</script>
	</body>
</html>
