    <br>
    <div id="bottom-topbar">
        @{
            if (IsPost)
            {
                string email = Request["email"];
                string phone = Request["phone"];
                string fname = Request["fname"];
                string lname = Request["lname"];
                string password = Request["pass"];
                string confirm = Request["confirm"];
                if (password == confirm) { 
                    var db = Database.Open("UpDockConnectionString");
                    var queryString = "INSERT INTO Prospect ( email , fname, lname, passwordhash ) VALUES ('" + email + "', '" + fname + "', '" + lname + "', '" + password + "');";
                    var query = db.Execute(queryString);
                    Session["user_email"] = email;
                    db.Close();
                    Response.BufferOutput = true;
                    Response.Redirect("ProspectInfo.cshtml");
                }
            }
            else {
        <form method="post">
            <div class="row">
