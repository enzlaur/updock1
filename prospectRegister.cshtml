                    <label id="login-signup">Prospect Registration</label>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="large-4 columns">
                    <input type="text" name="email" placeholder="Email Address" id="rounded-input-darkteal">
                </div>
                <div class="large-4 columns">
                    <input type="text" name="fname" placeholder="First Name" id="rounded-input-darkteal">
                </div>
                <div class="large-4 columns">
                    <input type="text" name="lname" placeholder="Last Name" id="rounded-input-darkteal">
                </div>
                <div class="large-4 columns">
                    <input type="password" name="pass" placeholder="Password" id="rounded-input-darkteal">
                </div>
                <div class="large-4 columns">
                    <input type="password" name="confirm" placeholder="Confirm Password" id="rounded-input-darkteal">
                </div>
            </div>
            <div class="row">
                <div>
                    <input type="submit" value="Sign-up" id="rounded-button-register">
                </div>
            </div>
        </form>
        }
